<div class="emotion-container">
  <div class="emotion-sliders">
    <% current_user.active_emotion_prototypes.each do |emotion| %>
    <% name = emotion.name %>
    <div class="emotion-text", id="<%= emotion.name %>">
      <p>
        <a href="#", class="description"><span><strong><%= "#{name.capitalize}: "%></strong><%=" #{emotion.description}" %></span>?</a><span style="padding-left: 1em"></span><span><%= name.capitalize %>: <span id="output-<%= name %>">0</span></span>
        <a href="#", class="remove" name="<%= emotion.name%>">Remove</a>
      </p>
      <input id="input-<%=name%>" oninput="proRangeSlider(this.id, 'output-<%= name %>')" style="background-color:<%= emotion.color %>" class="slider <%=name%>-slide" type="range" name="<%=name%>" min="0" max="9" value="0"><br>
    </div>
    <% end %>
  </div>
  <div class="add-emotion">
    <p><a id="add-emotion" class="add-new-emotion btn btn-default">New Emotion</a></p>
    <span class="hide add-emotion-form" style="z-index:1000">
      <label for="emotion_name">Emotion Name:</label>
      <input id="emotion-name" type="text" name="emotion[name]">
      <br>
      <label for="emotion_description">Description for what low and high scores for this emotion mean:</label>
      <textarea id="emotion-description" name="emotion[description]"></textarea>
      <label for="default_emotion">Or select from a default emotion</label>
      <%= collection_select(:user, :emotion_prototype_id, current_user.inactive_emotion_prototypes, :name, :name, prompt: "Default Emotions") %>
      <a id="create-emotion" style="color: #083A65">Submit</a>
    </span>
  </div>
  <div class="footer2">
    <div id="new-entry-main-button" class="send-entry">
      <a href="#" class="btn btn-default submit-entry" onclick="make_it_spin()">Submit Entry</a>
    </div>
  </div>
  <div id="spins">
  </div>
</div>

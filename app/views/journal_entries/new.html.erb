<br>
<h3 id="header" style="text-align:center">New Journal Entry</h3>
<br>


<div class="container entry-form">
  <div id="new-entry-main-button">
    <a href="#" style="font-size:large; color: black" class="btn btn-default submit-entry">Submit Entry</a>
  </div>
  <div class="row">
    <div class="col-md-2 emotion-select">
      <div class="row">
        <div class="col-md-1">
          <br>
        </div>
        <br>
        <div class="col-md-10 emotions">
          <div class="emotion-container">


            <div class="happy">
              <p>Happy</p>
              <input class="slider happy-slide" type="range" name="happy" min="0" max="10" value="0"><br>
            </div>
            <div class="sad">
              <p>Sad</p>
              <input class="slider sad-slide" type="range" name="sad" min="0" max="10" value="0"><br>
            </div>
            <div class="angry">
              <p>Angry</p>
              <input class="slider sad-slide" type="range" name="angry" min="0" max="10" value="0"><br>
            </div>
            <div class="anxious">
              <p>Anxious</p>
              <input class="slider sad-slide" type="range" name="anxious" min="0" max="10" value="0"><br>
            </div>
            <div class="focused">
              <p>Focused</p>
              <input class="slider sad-slide" type="range" name="focused" min="0" max="10" value="0"><br>
            </div>
            <div class="content">
              <p>Content</p>
              <input class="slider sad-slide" type="range" name="content" min="0" max="10" value="0"><br>
            </div>
            <!-- <div class="sad">
              Sad
              <input class="slider sad-slide" type="range" name="name" min="0" max="10" value="0"><br>
            </div>
            <div class="sad">
              Sad
              <input class="slider sad-slide" type="range" name="name" min="0" max="10" value="0"><br>
            </div> -->

          </div>
        </div>
      </div>
    </div>
    <div class="col-md-10">
      <%= form_for(@entry, html:{autocomplete:"off"}) do |f| %>
      <div class="form-group">
        <%= f.text_field :tag, id: "tag", value: "Tag your post with a descriptive title" %>
        <%= f.text_area :body, value: "New Entry" %>
      </div>
      <% end %>
      <div class="user" name="<%= @entry.user.id %>">
      </div>
    </div>
  </div>
</div>
